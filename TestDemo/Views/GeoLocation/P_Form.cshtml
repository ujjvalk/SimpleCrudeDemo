
@model TestDemo.Models.CustomModels.GeoLocationModel

@using (Ajax.BeginForm("Index", "GeoLocation", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "_List", OnSuccess = "fnSuccess();", OnBegin = "fnvalidation();" }))
{
    @Html.HiddenFor(e => e.Id, new { @class = "form-control formcontrol" })

    <div class="form-group row">
        <label class="col-md-2 control-label">Address</label>
        <div class='col-md-4'>
            @Html.TextBox("GeoLocationAddress", Model.GeoLocationAddress, new { @class = "form-control formcontrol", @placeholder = "GeoLocation Address", @title = "GeoLocationAddress", @id = "GeoLocationAddress", @required = "required" })
        </div>
    </div>
    <div class="form-group row">

        <label class="col-md-2 control-label">Latitude</label>
        <div class='col-md-4'>
            @Html.TextBox("Latitude", Model.Latitude, new { @class = "form-control formcontrol", @placeholder = "Latitude", @title = "Latitude", @id = "Latitude", @required = "required" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2 control-label">Longiude</label>
        <div class='col-md-4'>
            @Html.TextBox("Longiude", Model.Longiude, new { @class = "form-control formcontrol", @placeholder = "Longiude", @title = "Longiude", @id = "Longiude", @required = "required" })
        </div>

    </div>
    <div class="form-group row">
        <div class="col-md-6 col-md-offset-2">
            <input type="submit" class="btn btn-sm btn-success" id="validateBtn" value="Save">
            <button type="button" class="btn btn-sm btn-primary" onclick="fnReset();OnReset();">Reset</button>
        </div>
    </div>
}
